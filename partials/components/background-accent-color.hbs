{{!-- Background color --}}
{{#if @custom.use_tag_accent_as_background_color}}
    <style>
    body {
        background-color: {{#is "tag"}}{{accent_color}}{{else}}{{primary_tag.accent_color}}{{/is}};
    }
    .gh-navigation {
        color: var(--color-black);
    }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (window.getComputedStyle(document.body).backgroundColor === "rgb(0, 0, 0)") {
                document.documentElement.classList.replace('has-dark-text', 'has-light-text');
            }
        });
    </script>
{{/if}}
